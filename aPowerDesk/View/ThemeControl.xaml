<UserControl x:Class="aPowerDesk.View.ThemeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:c="clr-namespace:Albert.Flex.Windows;assembly=AlbertWin"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aPowerDesk.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
		<StackPanel Orientation="Horizontal">
			<c:OptionButton x:Name="opt1" Background="Black" />
			<c:OptionButton x:Name="opt2" Background="White" />
			<c:OptionButton x:Name="opt3" Background="{StaticResource AccentBrush}"  />
			<c:OptionButton x:Name="opt4" Background="{StaticResource AccentBrush2}"  />
			<c:OptionButton x:Name="opt5" Background="{StaticResource AccentBrush3}"  />
		</StackPanel> 
    </Grid>
</UserControl>
