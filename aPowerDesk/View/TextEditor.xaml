<c:DocumentControl x:Class="aPowerDesk.View.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:c="clr-namespace:Albert.Flex.Windows;assembly=AlbertWin"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aPowerDesk.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<Grid Background="{StaticResource AccentBrush4}">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<ComboBox x:Name="cmbDoc" Margin="4" SelectionChanged="cmbDoc_SelectionChanged" >
			<ComboBoxItem Content="One Document" Tag="One" />
			<ComboBoxItem Content="Two Documents" Tag="Two" />
			<ComboBoxItem Content="Three Documents" Tag="Three" />
		</ComboBox>

		<Grid Grid.Row="1"  x:Name="layoutRoot">
			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>



		</Grid>
	</Grid>
</c:DocumentControl>
