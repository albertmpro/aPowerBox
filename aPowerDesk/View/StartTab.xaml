<c:DocumentControl x:Class="aPowerDesk.View.StartTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aPowerDesk.View"
			 xmlns:c="clr-namespace:Albert.Flex.Windows;assembly=AlbertWin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource AccentBrush4}">
		<TextBlock Margin="10,0,0,0">
			<TextBlock.Resources>
				<Style TargetType="Hyperlink">
					<Setter Property="Foreground" Value="White" />
				</Style>
			</TextBlock.Resources>
			<Run FontSize="23pt" FontWeight="Light">Start Page</Run>
			<LineBreak />
				
			<Line Stroke="White" Margin="0,7" X1="0" X2="450"  StrokeThickness="1.3" />
			<LineBreak />
			<Hyperlink Tag="txt">New Text Document</Hyperlink>
			<LineBreak />
			<Hyperlink Tag="theme">New Theme Document</Hyperlink>
			<LineBreak />
		</TextBlock> 
    </Grid>
</c:DocumentControl>
