<tk:ChildWindow x:Class="aPowerDesk.View.NewWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:aPowerDesk.View"
             mc:Ignorable="d" Caption="New Item" CaptionForeground="White"
				Width="450" Height="400"
             d:DesignHeight="400" d:DesignWidth="450">
    <Grid>
		<StackPanel Margin="15,0,0,0">
			<TextBlock FontSize="14pt">
				<Run FontWeight="Bold">New Item</Run>
				<LineBreak />
				<Hyperlink Click="link_Click" Tag="txt">New Text Document</Hyperlink>
			</TextBlock>
		</StackPanel>
    </Grid>
</tk:ChildWindow>
